<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import java.net.URL?>

<AnchorPane prefWidth="435" prefHeight="560"  fx:controller="mokira.suko.SuperKalculator"
          xmlns:fx="http://javafx.com/fxml">
    
    <stylesheets>
        <URL value="@./style.css"/>
    </stylesheets>

    <Label fx:id="inputLabel" AnchorPane.topAnchor="40" AnchorPane.leftAnchor="7" styleClass="input-label" />
    <Label fx:id="outputLabel" AnchorPane.topAnchor="90" AnchorPane.leftAnchor="7" text="0" styleClass="output-label" />
    
    <!-- Grid Button -->
    <GridPane AnchorPane.topAnchor="200" AnchorPane.leftAnchor="5" >
        <Button text="7" GridPane.rowIndex="0"  GridPane.columnIndex="0" styleClass="button-row-0-primary-color" />
        <Button text="8" GridPane.rowIndex="0"  GridPane.columnIndex="1" styleClass="button-row-0-primary-color" />
        <Button text="9" GridPane.rowIndex="0"  GridPane.columnIndex="2" styleClass="button-row-0-primary-color" />
        <Button text="/" GridPane.rowIndex="0"  GridPane.columnIndex="3" styleClass="button-row-0-primary-color" />

        <Button text="4" GridPane.rowIndex="1"  GridPane.columnIndex="0" styleClass="button-row-0-primary-color" />
        <Button text="5" GridPane.rowIndex="1"  GridPane.columnIndex="1" styleClass="button-row-0-primary-color" />
        <Button text="6" GridPane.rowIndex="1"  GridPane.columnIndex="2" styleClass="button-row-0-primary-color" />
        <Button text="*" GridPane.rowIndex="1"  GridPane.columnIndex="3" styleClass="button-row-0-primary-color" />

        <Button text="1" GridPane.rowIndex="2"  GridPane.columnIndex="0" styleClass="button-row-0-primary-color" />
        <Button text="2" GridPane.rowIndex="2"  GridPane.columnIndex="1" styleClass="button-row-0-primary-color" />
        <Button text="3" GridPane.rowIndex="2"  GridPane.columnIndex="2" styleClass="button-row-0-primary-color" />
        <Button text="-" GridPane.rowIndex="2"  GridPane.columnIndex="3" styleClass="button-row-0-primary-color" />

        <Button text="C" GridPane.rowIndex="3"  GridPane.columnIndex="0" styleClass="button-row-0-primary-color" />
        <Button text="0" GridPane.rowIndex="3"  GridPane.columnIndex="1" styleClass="button-row-0-primary-color" />
        <Button text="=" GridPane.rowIndex="3"  GridPane.columnIndex="2" styleClass="button-row-0-secondary-color" />
        <Button text="+" GridPane.rowIndex="3"  GridPane.columnIndex="3" styleClass="button-row-0-secondary-color" />
    </GridPane>
    
</AnchorPane>